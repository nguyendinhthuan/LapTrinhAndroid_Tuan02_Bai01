<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Các kiểu lập trình sự kiện"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#006400"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số a: "
            android:textColor="#000000"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_SoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số a "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số b: "
            android:textColor="#000000"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_SoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số b "/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_KetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#006400"/>

    <Button
        android:id="@+id/bt_TongHaiSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng 2 số"/>

    <Button
        android:id="@+id/bt_HieuHaiSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiệu 2 số"/>

    <Button
        android:id="@+id/bt_TichHaiSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tích 2 số"/>

    <Button
        android:id="@+id/bt_ThuongHaiSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thương 2 số"/>

    <Button
        android:id="@+id/bt_UocSoChungLonNhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ước số chung lớn nhất"/>

    <Button
        android:id="@+id/bt_Thoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát chương trình"
        android:textColor="#ff0000"/>
</LinearLayout>